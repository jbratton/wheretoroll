            span.glyphicon.glyphicon-time
          input.form-control#wednesday_end disabled="true" type="text" data-date-format="h:mm A" name="open_practice[wednesday_end]" placeholder="End Time" value="#{@open_practice.try(:wednesday_end).present? ? @open_practice.wednesday_end.strftime("%l:%M %p") : ""}"
  .row
    .col-md-2
      = f.check_box :thursday, label: "Thursday"
    .col-md-3
      .form-group
        .input-group.date#thursday_start_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#thursday_start disabled="true" type="text" data-date-format="h:mm A" name="open_practice[thursday_start]" placeholder="Start Time" value="#{@open_practice.try(:thursday_start).present? ? @open_practice.thursday_start.strftime("%l:%M %p") : ""}"
    .col-md-3
      .form-group
        .input-group.date#thursday_end_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#thursday_end disabled="true" type="text" data-date-format="h:mm A" name="open_practice[thursday_end]" placeholder="End Time" value="#{@open_practice.try(:thursday_end).present? ? @open_practice.thursday_end.strftime("%l:%M %p") : ""}"
  .row
    .col-md-2
      = f.check_box :friday, label: "Friday"
    .col-md-3
      .form-group
        .input-group.date#friday_start_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#friday_start disabled="true" type="text" data-date-format="h:mm A" name="open_practice[friday_start]" placeholder="Start Time" value="#{@open_practice.try(:friday_start).present? ? @open_practice.friday_start.strftime("%l:%M %p") : ""}"
    .col-md-3
      .form-group
        .input-group.date#friday_end_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#friday_end disabled="true" type="text" data-date-format="h:mm A" name="open_practice[friday_end]" placeholder="End Time" value="#{@open_practice.try(:friday_end).present? ? @open_practice.friday_end.strftime("%l:%M %p") : ""}"
  .row
    .col-md-2
      = f.check_box :saturday, label: "Saturday"
    .col-md-3
      .form-group
        .input-group.date#saturday_start_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#saturday_start disabled="true" type="text" data-date-format="h:mm A" name="open_practice[saturday_start]" placeholder="Start Time" value="#{@open_practice.try(:saturday_start).present? ? @open_practice.saturday_start.strftime("%l:%M %p") : ""}"
    .col-md-3
      .form-group
        .input-group.date#saturday_end_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#saturday_end disabled="true" type="text" data-date-format="h:mm A" name="open_practice[saturday_end]" placeholder="End Time" value="#{@open_practice.try(:saturday_end).present? ? @open_practice.saturday_end.strftime("%l:%M %p") : ""}"
  .row
    .col-md-2
      = f.check_box :sunday, label: "Sunday"
    .col-md-3
      .form-group
        .input-group.date#sunday_start_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#sunday_start disabled="true" type="text" data-date-format="h:mm A" name="open_practice[sunday_start]" placeholder="Start Time" value="#{@open_practice.try(:sunday_start).present? ? @open_practice.sunday_start.strftime("%l:%M %p") : ""}"
    .col-md-3
      .form-group
        .input-group.date#sunday_end_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#sunday_end disabled="true" type="text" data-date-format="h:mm A" name="open_practice[sunday_end]" placeholder="End Time" value="#{@open_practice.try(:sunday_end).present? ? @open_practice.sunday_end.strftime("%l:%M %p") : ""}"
  - if admin_signed_in?
    .row
      .col-md-12
        = f.check_box :approved, label: "Approved?", help: "Approved events will appear for all users on the main site."
  .row
    br
  .row
    .col-md-1
      a.btn.btn-default role="button" href="#{root_path}" Cancel
    .col-md-1
      .actions = f.submit "Submit"
  .row
    br
