= bootstrap_form_for @open_practice do |f|
  - if @open_practice.errors.any?
    #error_explanation
      h2 = "#{pluralize(@open_practice.errors.count, "error")} prohibited this practice from being saved:"
      ul
        - @open_practice.errors.full_messages.each do |message|
          li = message

  .row
    .col-md-8
      p
        | We understand practice times and venues can change on short notice so we 
        | ask visiting skaters to get in touch with the listed contact for specifics such as ruleset and gender 
        | and to confirm time and location before showing up.
        br
        | Please let us know by 
        a href="mailto:info@wheretoroll.com" email
        |  or 
        a href="https://www.facebook.com/wheretoroll" Facebook
        |  if your league is already listed, but has made permanent changes to their practice schedule.
  .row
    br
  .row
    .col-md-6
      = f.email_field :submission_contact, label: "Your Email Address", hide_label: true, placeholder: "Your Email Address", help: "We promise only to use this to contact you regarding this submission.", icon: "asterisk"
  .row
    .col-md-6
      = f.text_field :league_name, label: "League Name", hide_label: true, placeholder: "League Name", icon: "asterisk"
  .row
    .col-md-6
      = f.text_field :league_website, hide_label: true, placeholder: "League Website Address"
  .row
    .col-md-6
      = f.email_field :practice_contact, label: "Practice Contact Email", hide_label: true, placeholder: "Practice Contact Email"
  .row
    .col-md-6
      = f.text_field :venue, hide_label: true, placeholder: "Venue Name and/or Street Address"
  .row
    .col-md-3
      = f.text_field :city, hide_label: true, placeholder: "City", icon: "asterisk"
  .row
    .col-md-3
      = f.text_field :state, hide_label: true, placeholder: "State/Province"
  .row
    .col-md-2
      = f.text_field :postal_code, hide_label: true, placeholder: "Postal Code"
  .row
    .col-md-2
      .form-group
        = f.label :country, "Country", { class: 'control-label' }
        span.glyphicon.glyphicon-asterisk
        = f.country_select :country, { priority_countries: ["AU", "AR", "BS", "BE", "BR", "CA", "CL", "CO", "DK", "FI", "FR", "DE", "GR", "IE", "IT", "JP", "MX", "NL", "NZ", "NO", "PT", "PR", "ZA", "ES", "SE", "CH", "GB", "UM", "US", "VG", "VI"] }, class: 'form-control'
  .row
    .col-md-2
      = f.text_field :cost, hide_label: true, placeholder: "Cost"
  .row
    .col-md-2
      = f.check_box :monday, label: "Monday"
    .col-md-3
      .form-group
        .input-group.date#monday_start_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#monday_start disabled="true" type="text" data-date-format="h:mm A" name="open_practice[monday_start]" placeholder="Start Time" value="#{@open_practice.try(:monday_start).present? ? @open_practice.monday_start.strftime("%l:%M %p") : ""}"
    .col-md-3
      .form-group
        .input-group.date#monday_end_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#monday_end disabled="true" type="text" data-date-format="h:mm A" name="open_practice[monday_end]" placeholder="End Time" value="#{@open_practice.try(:monday_end).present? ? @open_practice.monday_end.strftime("%l:%M %p") : ""}"
  .row
    .col-md-2
      = f.check_box :tuesday, label: "Tuesday"
    .col-md-3
      .form-group
        .input-group.date#tuesday_start_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#tuesday_start disabled="true" type="text" data-date-format="h:mm A" name="open_practice[tuesday_start]" placeholder="Start Time" value="#{@open_practice.try(:tuesday_start).present? ? @open_practice.monday_start.strftime("%l:%M %p") : ""}"
    .col-md-3
      .form-group
        .input-group.date#tuesday_end_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#tuesday_end disabled="true" type="text" data-date-format="h:mm A" name="open_practice[tuesday_end]" placeholder="End Time" value="#{@open_practice.try(:tuesday_end).present? ? @open_practice.monday_end.strftime("%l:%M %p") : ""}"
  .row
    .col-md-2
      = f.check_box :wednesday, label: "Wednesday"
    .col-md-3
      .form-group
        .input-group.date#wednesday_start_group
          span.input-group-addon
            span.glyphicon.glyphicon-time
          input.form-control#wednesday_start disabled="true" type="text" data-date-format="h:mm A" name="open_practice[wednesday_start]" placeholder="Start Time" value="#{@open_practice.try(:wednesday_start).present? ? @open_practice.wednesday_start.strftime("%l:%M %p") : ""}"
    .col-md-3
      .form-group
        .input-group.date#wednesday_end_group
